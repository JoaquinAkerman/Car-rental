{% extends "layout.njk" %}
{% block title %}
    Add New Car
{% endblock title %}
{% block content %}
    <h2 class="subtitle">Add New Car</h2>
    <form action="/admin/add" method="post" class="box">
        <label for="brand">Brand:</label>
        <br>
        <input type="text" id="brand" name="brand" required>
        <br>
        <label for="model">Model:</label>
        <br>
        <input type="text" id="model" name="model" required>
        <br>
        <label for="day_price">Day Price:</label>
        <br>
        <input type="number" id="day_price" name="day_price" required>
        <br>
        <label for="year">Year:</label>
        <br>
        <input type="number" id="year" name="year">
        <br>
        <label for="mileage">Mileage:</label>
        <br>
        <input type="number" id="mileage" name="mileage">
        <br>
        <label for="color">Color:</label>
        <br>
        <input type="text" id="color" name="color">
        <br>
        <label for="air_conditioning">Air Conditioning:</label>
        <br>
        <input type="text" id="air_conditioning" name="air_conditioning">
        <br>
        <label for="passengers">Passengers:</label>
        <br>
        <input type="number" id="passengers" name="passengers">
        <br>
        <label for="transmission">Transmission:</label>
        <br>
        <input type="text" id="transmission" name="transmission">
        <br>
        <label for="panoramic_sunroof">Panoramic Sunroof:</label>
        <br>
        <input type="text" id="panoramic_sunroof" name="panoramic_sunroof">
        <br>
        <input type="submit" class="button is-primary mt-4" value="Add Car">
    </form>
    <a href="/admin/dashboard">Back to Dashboard</a>
{% endblock content %}
