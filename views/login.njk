{% extends "layout.njk" %}

{% block title %}
Login
{% endblock %}

{% block content %}
<h1>Login</h1>
{% if message %}
<p>{{ message }}</p>
{% endif %}
<form action="/" method="post">
    <label for="username" >Username:</label><br>
    <input type="text" id="username" name="username" placeholder="admin"><br>
    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password" placeholder="admin"><br>
    <input type="submit"  value="Login">
</form>
<a href="/cars" style="display: inline-block; padding: 10px; background-color: #4CAF50; color: white; text-decoration: none; margin-top: 10px;">View Cars (no login needed)</a>
{% endblock %}